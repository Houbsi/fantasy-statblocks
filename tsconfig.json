{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSources": true,
        "module": "ESNext",
        "target": "esnext",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "types": ["svelte", "node"],
        "lib": ["dom", "esnext", "scripthost", "es2020"],
        "isolatedModules": false
    },
    "include": ["**/*.ts"]
}
